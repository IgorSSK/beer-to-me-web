{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
			"@domain/*": [
				"domain/*"
			],
			"@data/*": [
				"data/*"
			],
			"@infra/*": [
				"infra/*"
			],
			"@application/*": [
				"application/*"
			],
			"@presentation/*": [
				"presentation/*"
			],
			"@main/*": [
				"main/*"
			],
			"@main/*": [
				"main/*"
			],
			"@common/*": [
				"common/*"
			],
			"@tests/*": [
				"../tests/*"
			]
		}
	},
	"include": [
		"./src"
	]
}
